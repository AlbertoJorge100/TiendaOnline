<?xml version="1.0" encoding="UTF-8"?>
    <web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>consultaProducto</servlet-name>
        <servlet-class>Servlets.consultaProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registrar</servlet-name>
        <servlet-class>Servlets.registrar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addCarrito</servlet-name>
        <servlet-class>Servlets.addCarrito</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>eliminar</servlet-name>
        <servlet-class>Servlets.eliminar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>pagos</servlet-name>
        <servlet-class>Servlets.pagos</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>consultaProducto</servlet-name>
        <url-pattern>/consultaProducto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registrar</servlet-name>
        <url-pattern>/registrar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addCarrito</servlet-name>
        <url-pattern>/addCarrito</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>eliminar</servlet-name>
        <url-pattern>/eliminar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>pagos</servlet-name>
        <url-pattern>/pagos</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>Login</welcome-file>
    </welcome-file-list>
</web-app>
